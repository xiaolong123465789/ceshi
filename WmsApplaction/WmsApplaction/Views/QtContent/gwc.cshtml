
@{
    ViewBag.Title = "gwc";
    Layout = "~/Views/Shared/_FrontPage.cshtml";
}
<!-- 商品列表 -->
<style>
    .cart-item {
        transition: all 0.3s;
    }

        .cart-item:hover {
            background-color: #f8f9fa;
        }

    .quantity-input {
        width: 60px;
        text-align: center;
    }

    .summary-card {
        position: sticky;
        top: 20px;
    }
</style>
<body>


    <!-- 购物车内容 -->
    <div class="container my-4">
        <div class="row">
            <!-- 购物车商品列表 -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header bg-white">
                        <h4 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>我的购物车</h4>
                    </div>
                    <div class="card-body">
                        <!-- 购物车商品1 -->
                        <div class="row align-items-center cart-item py-3 border-bottom">
                            <div class="col-md-2">
                                <img src="https://via.placeholder.com/100x100" class="img-fluid rounded" alt="智能手机">
                            </div>
                            <div class="col-md-4">
                                <h5 class="mb-1">智能手机</h5>
                                <p class="text-muted mb-0">高性能处理器，超长续航</p>
                            </div>
                            <div class="col-md-2">
                                <span class="h5 text-danger">¥2999</span>
                            </div>
                            <div class="col-md-2">
                                <div class="input-group">
                                    <button class="btn btn-outline-secondary quantity-btn" type="button">-</button>
                                    <input type="text" class="form-control quantity-input" value="1">
                                    <button class="btn btn-outline-secondary quantity-btn" type="button">+</button>
                                </div>
                            </div>
                            <div class="col-md-2 text-end">
                                <button class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> 删除
                                </button>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> 继续购物
                            </button>
                            <button class="btn btn-outline-danger float-end">
                                <i class="fas fa-trash me-1"></i> 清空购物车
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 订单摘要 -->
            <div class="col-lg-4">
                <div class="card summary-card">
                    <div class="card-header bg-white">
                        <h4 class="mb-0"><i class="fas fa-receipt me-2"></i>订单摘要</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>商品总价 (3件)</span>
                            <span>¥4297</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>运费</span>
                            <span>¥0</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>优惠折扣</span>
                            <span class="text-success">-¥100</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>应付总额</h5>
                            <h5 class="text-danger">¥4197</h5>
                        </div>
                        <button class="btn btn-primary w-100 py-2">
                            <i class="fas fa-credit-card me-1"></i> 去结算
                        </button>


                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 简洁页脚 -->
    <footer>
        <div class="container text-center">
            <p class="mb-0">© 2023 简洁购物平台 | <a href="#" class="text-decoration-none">隐私政策</a> | <a href="#" class="text-decoration-none">服务条款</a></p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script>
        $(function () {
            
        })
        // 数量加减功能
        document.querySelectorAll('.quantity-btn').forEach(button => {
            button.addEventListener('click', function () {
                const input = this.parentElement.querySelector('.quantity-input');
                let value = parseInt(input.value);

                if (this.textContent === '+' && value < 99) {
                    input.value = value + 1;
                } else if (this.textContent === '-' && value > 1) {
                    input.value = value - 1;
                }

                // 这里可以添加更新总价的逻辑
            });
        });

        // 删除商品功能
        document.querySelectorAll('.btn-outline-danger').forEach(button => {
            if (!button.classList.contains('float-end')) {
                button.addEventListener('click', function () {
                    const cartItem = this.closest('.cart-item');
                    cartItem.style.opacity = '0';
                    setTimeout(() => {
                        cartItem.remove();
                        // 这里可以添加更新总价的逻辑
                    }, 300);
                });
            }
        });
    </script>
</body>

