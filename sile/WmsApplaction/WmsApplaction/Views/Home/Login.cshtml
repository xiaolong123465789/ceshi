@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<script src="~/js/jquery-3.3.1.min.js"></script>
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/Login.css" rel="stylesheet" />

<main>
    <div class="bg">
        <div class="header" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.5);">
            <div class="text-header">
                <b>简单库存管理系统</b>
            </div>
            <form style="padding: 30px 30px 0 30px;">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"></span>
                    </div>
                    <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"></span>
                    </div>
                    <input type="text" class="form-control" placeholder="验证码" required>
                    <img src="./img/captcha.png" alt="验证码" style="height:38px; margin-left:10px; border-radius:4px;">
                </div>
                <div class="form-group mb-3 d-flex align-items-center">
                    <input type="checkbox" id="remember" style="margin-right:8px;">
                    <label for="remember" style="margin-bottom:0;">记住密码</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="width:100%; font-size:18px;">登 录</button>
                <div style="text-align:center; color:#888; font-size:13px; margin-top:20px;">
                    基于Simplest Admin定制开发
                </div>
            </form>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            var homeUrl = '@Url.Action("Index","Home")';
            // 处理表单提交
            $('form').on('submit', function (event) {
                event.preventDefault(); // 阻止默认提交行为
                alert('登录功能尚未实现');
            });
            $('button[type="submit"]').on('click', function () {
                alert('登录成功');
                // 这里可以添加登录成功后的逻辑，比如跳转到主页
                window.location.href = homeUrl; // 假设登录成功后跳转到 home.html
            });
        });
    </script>
    <script src="~/js/bootstrap.bundle.js"></script>
</main>